    <include>com_zimbraflow.js</include>
    <includeCSS>zimbraflow.css</includeCSS>
    <handlerObject>com_zimbraflow_HandlerObject</handlerObject>
    <zimletPanelItem label="${msg.label}" icon="zimbraflow-panelIcon">
